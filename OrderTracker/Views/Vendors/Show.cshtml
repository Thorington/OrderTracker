@{
  Layout = "_Layout";
  }

  @using OrderTracker.Models;

    <h1>🛎️ Here are all the orders for @Model["vendor"].Name:</h1>

    <ol>
    @if (@Model.Count == 0)
  {
    <p><em>No orders have been added yet!</em></p>
  }
    </ol>

    <ol>
    @foreach (Order order in @Model["orders"])
    {
      <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
    }
    </ol>
    <br>
    <br>
    <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
    <p><a href='/vendors'>Back to vendors</a></p>
    <p><a href='/'>Back to home</a></p>