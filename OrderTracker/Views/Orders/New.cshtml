@{
  Layout = "_Layout";
  }

<h1>🛎️ Add a new order to @Model.Name</h1>

  <form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">

  <p>Title</p>
  <input id="orderTitle" name="orderTitle" type="text" input size="50">
  <br>
  <br>
  <p>Date</p>
  <input id="orderDate" name="orderDate" type="text">
  <br>
  <br>
  <p>Description</p>
  <input id="orderDescription" name="orderDescription" type="text" input size="50">
  <br>
  <br>
  <p>Price</p>
  <input id="orderPrice" name="orderPrice" type="text">
  <br>
  <br>
  <button type='submit'>Add order</button>
  </form>
  <br>
  <br>
  <p><a href='/vendors/@Model.Id'>Back to orders</a></p>
  <p><a href='/vendors'>Back to vendors</a></p>
  <p><a href='/'>Back to home</a></p>


      